{
  "trading": {
    "pair": "USDJPY",
    "spread_pips": 0.7,
    "pip_value": 0.01,
    "tp_pips": 4.0,
    "sl_pips": 5.0,
    "trade_threshold": 0.5
  },
  "data": {
    "input_file": "data/usdjpy_ticks.csv",
    "sample_rate": 1,
    "future_window": 100,
    "feature_window": 64
  },
  "indicators": {
    "use_bbands": true,
    "bbands_period": 20,
    "bbands_std": 2,
    "use_macd": true,
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "use_rsi": true,
    "rsi_period": 14,
    "use_atr": true,
    "atr_period": 14,
    "use_cci": true,
    "cci_period": 14,
    "use_volume": true,
    "use_sma": true,
    "sma_periods": [5, 10, 20],
    "use_ema": true,
    "ema_periods": [5, 10, 20]
  },
  "model": {
    "type": "Hybrid",
    "conv_filters": [32, 64, 128],
    "conv_kernel_size": 3,
    "lstm_units": [64, 32],
    "dropout_rate": 0.2,
    "learning_rate": 0.001,
    "batch_size": 512,
    "epochs": 100,
    "validation_split": 0.2,
    "early_stopping_patience": 10
  },
  "logging": {
    "log_level": "INFO",
    "save_plots": true,
    "save_model_summary": true
  }
}