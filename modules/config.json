{
  "trading": {
    "pair": "USDJPY",
    "spread_pips": 0.7,
    "pip_value": 0.01,
    "tp_pips": 5.0,
    "sl_pips": 4.0,
    "trade_threshold": 0.5
  },
  "data": {
    "input_file": "data/usdjpy_ticks.csv",
    "sample_rate": 1,
    "future_window": 400,
    "feature_window": 64
  },
  "indicators": {
    "use_bbands": true,
    "bbands_period": 20,
    "bbands_std": 2,
    "use_macd": false,
    "macd_fast": 6,
    "macd_slow": 19,
    "macd_signal": 9,
    "use_rsi": false,
    "rsi_period": 5,
    "use_atr": false,
    "atr_period": 14,
    "use_cci": false,
    "cci_period": 14,
    "use_volume": false,
    "use_sma": false,
    "sma_periods": [5, 10, 20],
    "use_ema": false,
    "ema_periods": [5, 10, 20]
  },
  "model": {
    "type": "LSTM",
    "conv_filters": [32, 64, 128],
    "conv_kernel_size": 3,
    "lstm_units": [64, 32],
    "dropout_rate": 0.3,
    "learning_rate": 0.001,
    "batch_size": 512,
    "epochs": 20,
    "validation_split": 0.2,
    "early_stopping_patience": 15,
    "class_weight_mode": "balanced",
    "manual_class_weights": {
      "0": 1.5,
      "1": 1.5,
      "2": 1.0
    },
    "use_manual_weights": false,
    "label_smoothing": 0.0,
    "loss_type": "sparse_categorical_crossentropy",
    "focal_alpha": 1.0,
    "focal_gamma": 2.0
  },
  "logging": {
    "log_level": "INFO",
    "save_plots": true,
    "save_model_summary": true
  }
}